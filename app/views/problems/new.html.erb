<h2>Create New Problem</h2>

<div class="panel panel-default">
  <div class="panel-body">
    <%= form_for(@problem) do |f| %>

      <div class="field">
        <%= f.label :title %>
        <%= f.text_field :title, {autofocus: true, class: "form-control"} %>
      </div><br />

      <div class="field">
        <%= f.label :description %>
        <%= f.text_area :description, {autofocus: true, class: "form-control", rows: "10" } %>
      </div><br />

      <div class="field">
        <%= f.label :publish_status %>
        <%= f.select :publish_status, [["Closed", "closed"], ["Publish", "published"]] %>
      </div><br />

      <div class="field">
        <%= f.label :cases, "TestCases" %><br />
        <%= f.fields_for :cases do |fc| %>
          <%= render "case_fields", f: fc %>
        <% end %>
      </div>

      <%= link_to_add_fields "Add Test Case", f, :cases, class:"btn btn-success", role:"button" do %>
        <i class="glyphicon glyphicon-plus-sign"></i> Add Test Case
      <% end %>

      <div class="actions">
        <%= f.submit "Submit", class:"btn btn-primary", role:"button" %>
      </div>
    <% end %>
  </div><!-- "panel-body" -->
</div><!-- "panel panel-default" -->
